<h1>Register your product</h1>

<% if @seller.errors.any? %>
    <h2>The following errors prevented the user from saving:</h2>
    <ul>
        <% @seller.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

  
<%=form_with model: @product, url: products_path, local: true do |form|%>

    <p>
    <%= form.label :title%><br/>
    <%= form.text_field :title%>
    </p>

    <p>
    <%= form.label :description%><br/>
    <%= form.text_field :description%>
    </p>

    <p>
    <%= form.label :price%><br/>
    <%= form.text_field :price%>
    </p>

    <p>
    <%= form.submit "Sign up"%><br/>
    </p>

<%end%>