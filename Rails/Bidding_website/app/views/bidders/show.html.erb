    <%= link_to "View all bidders", bidders_path %>
<% end%>

<h1>Bidder Items details</h1>
<% curr_bidder = current_bidder %>

<% @items = curr_bidder.items.paginate(page: params[:page], per_page: 5) %>


<%= render "items/item" %>
