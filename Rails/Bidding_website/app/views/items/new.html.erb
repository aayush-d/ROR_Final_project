<%= form_with model: @item, url: items_path, local: true do |f| %>
  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class = "field">
    <%= f.label :category %>
    <%= f.select :category, ["Electronics", "Sports", "Books", "Apparel", "Furniture", "Others"] %>
  </div>

  <div class = "field">
    <%= f.label :status %>
    <%= f.select :status, ["draft", "sell", "sold"]%>
  <div>

  <div class = "field">
    <%= f.label :minimum_bidding_price %>
    <%= f.number_field :min_bid %>
  <div>

  <div class="actions">
    <%= f.submit "Upload item" %>
  </div>

<% end %>
